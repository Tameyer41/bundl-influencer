{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["pages/api/*"],
      "@lib/*": ["lib/*"],
      "@components/*": ["lib/components/*"],
      "@components": ["lib/components/index"],
      "@db/*": ["prisma/*"],
      "@db": ["prisma/index"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/wysiwyg/suggestion/renderItems.jsx",
    "components/wysiwyg/suggestion/item.js",
    "components/wysiwyg/suggestion/commands.js",
    "components/wysiwyg/suggestion/CommandsList.js"
  ],
  "exclude": ["node_modules"]
}
